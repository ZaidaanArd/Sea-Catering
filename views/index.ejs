  <!-- TESTIMONIAL CAROUSEL JAVASCRIPT -->
  <script>
    const carousel = document.getElementById('testimonial-carousel');

    // Duplicate testimonials agar looping terlihat mulus
    const cloneCards = () => {
      if (carousel.querySelectorAll('.testimonial-card.clone').length) return;
      const cards = Array.from(carousel.querySelectorAll('.testimonial-card'));
      cards.forEach(card => {
        const clone = card.cloneNode(true);
        clone.classList.add('clone');
        carousel.appendChild(clone);
      });
    };
    cloneCards();

    function autoScrollCarousel() {
      const card = carousel.querySelector('.testimonial-card');
      const scrollAmount = card.offsetWidth + 26;
      if (carousel.scrollLeft >= carousel.scrollWidth / 2) {
        carousel.scrollLeft = 0;
      }
      carousel.scrollBy({ left: scrollAmount, behavior: 'smooth' });
    }
    setInterval(autoScrollCarousel, 2500);
  </script>
