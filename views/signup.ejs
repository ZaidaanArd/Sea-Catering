<!DOCTYPE html>
<html>
<head>
  <title>Create Account - SEA Catering</title>
  <link rel="stylesheet" href="/style.css">
  <link rel="stylesheet" href="/auth.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@tabler/icons-webfont/tabler-icons.min.css" />
</head>
<body>
  <%- include('partials/header') %>
  <main style="min-height: 85vh;">
    <div class="auth-title">Create Account</div>
    <div class="auth-card">

      <% if (typeof errorMsg !== 'undefined' && errorMsg) { %>
        <div class="form-error"><%= errorMsg %></div>
      <% } %>
      <% if (typeof successMsg !== 'undefined' && successMsg) { %>
        <div class="form-success"><%= successMsg %></div>
      <% } %>

      <form class="auth-form" method="POST" action="/signup">
        <label class="auth-label" for="name">
          <i class="ti ti-user"></i> Full Name
        </label>
        <input type="text" id="name" name="name" class="auth-input" placeholder="Albert" required>
        
        <label class="auth-label" for="email">
          <i class="ti ti-mail"></i> Email
        </label>
        <input type="email" id="email" name="email" class="auth-input" placeholder="you@example.com" required>
        
        <label class="auth-label" for="password">
          <i class="ti ti-lock"></i> Password
        </label>
        <input type="password" id="password" name="password" class="auth-input" required minlength="8">
        
        <label class="auth-label" for="confirm_password">
          <i class="ti ti-lock"></i> Confirm Password
        </label>
        <input type="password" id="confirm_password" name="confirm_password" class="auth-input" required minlength="8">
        
        <button type="submit" class="auth-btn">Register</button>
        <div class="auth-bottom-text">
          Already have account? <a href="/signin" style="color:#28a745;font-weight:600;">Sign In</a>
        </div>
      </form>
    </div>
  </main>
  <%- include('partials/footer') %>
</body>
</html>
